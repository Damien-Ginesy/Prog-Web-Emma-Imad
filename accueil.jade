doctype html
html
  head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1' crossorigin='anonymous')
        link(href="/style/main.css" rel="stylesheet" type="text/css")
        title=Reddit
  body
    header#header.shadow.bg-light
      div.container
        div.row
          div.col-2
            img.img-fluid(src='https://logodownload.org/wp-content/uploads/2018/02/reddit-logo.png' alt='')
          div.col-8
            input.search-box(type='search' placeholder='Search' aria-label='Search')
          div.col
            div.btn.rounded-pill(role='group' aria-label='Outline example')
              form(method="POST" action="/logout")
                input.btn.btn-primary(type="submit" value="Log Out")
    
    ul.nav.nav-pills.justify-content-end.nav-item
      a.create.nav-link(href="/article/create")="Create a new article"
    each i in article
      div.col
        ul.nav.nav-pills.justify-content-center
          li.nav-item
            a.name_article(href="/"+i.id class=categoryActive && categoryActive.id === i.id ? "active" : "")=i.name
            div.box_size
              div.row-2
                div.content_article.nav-link(href="/"+i.id class=categoryActive && categoryActive.id === i.id ? "active" : "")=i.content
                  div.col-2
                    form(method="POST" action="/" + i.id + "/up")      
                      button  
                        svg.bi.bi-arrow-up.arrow_up(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                          path(fill-rule='evenodd' d='M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z')
                    a.up=i.up
                    form(method="POST" action="/" + i.id + "/down")
                      button
                        svg.bi.bi-arrow-down.arrow_down(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                          path(fill-rule='evenodd' d='M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z')
                  
                  
